{
  "scripts": {
    "dev": "concurrently \"pnpm dev:webapp\" \"pnpm dev:shared\"",
    "dev:web": "pnpm --filter webapp dev",
    "dev:shared": "pnpm --filter shared dev",
    "dev:indexer": "pnpm --filter indexer dev",
    "build": "pnpm recursive run build",
    "build:web": "pnpm --filter webapp build",
    "build:shared": "pnpm --filter shared build",
    "build:indexer": "pnpm --filter indexer build",
    "postinstall": "pnpm run build:shared && pnpm run build:indexer",
    "prettier": "prettier --ignore-path .gitignore --write ./**/*.{ts,tsx,json,md,css}"
  },
  "packageManager": "pnpm@10.24.0",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "concurrently": "^9.2.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "vercel": "^48.6.0"
  }
}
